<%= link_to 'New Invitation', new_invitation_path %>

<h1>Listing invitations</h1>
<div class="span8">
<table class="table table-condensed">
  <thead>
    <tr>
      <th>Sender</th>
      <th>Recipient email</th>
      <th>Token</th>
      <th>Sent at</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invitations.each do |invitation| %>
      <tr>
        <td><%= invitation.sender_id %></td>
        <td><%= invitation.recipient_email %></td>
        <td><%= invitation.token %></td>
        <td><%= invitation.sent_at %></td>
        <td><% if invitation.accepted? %>Accepted <%else%> Pending <%end%> </td>
        <td><%= link_to 'Destroy', invitation, method: :delete, data: { confirm: 'Are you sure?' } if !invitation.accepted? && invitation.sender_id == current_user.id  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>

