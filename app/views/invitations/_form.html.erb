<%= simple_form_for(@invitation) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :sender_id %>
    <%= f.input :recipient_email %>
    <%= f.input :token %>
    <%= f.input :sent_at %>
    <%= f.input :new %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
